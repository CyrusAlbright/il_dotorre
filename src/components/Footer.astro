---
import { ORGANIZATION_NAME } from "../consts";
import SocialLinks from "./SocialLinks.astro";
const today = new Date();
---

<footer>
	&copy;{today.getFullYear()} {ORGANIZATION_NAME}. All rights reserved.
	<SocialLinks />
</footer>
<style>
	footer {
		padding: 2em 1em 6em 1em;
		background: linear-gradient(var(--gray-gradient)) no-repeat;
		color: rgb(var(--gray));
		text-align: center;
		--link-base: rgb(var(--gray));
		--link-highlight: rgb(var(--gray-dark));
	}
</style>
